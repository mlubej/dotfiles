#!/usr/bin/env

# Move windows
hyper - left : yabai -m window --resize left:-50:0; \
                 yabai -m window --resize right:-50:0
hyper - down : yabai -m window --resize bottom:0:50; \
                 yabai -m window --resize top:0:50
hyper - up : yabai -m window --resize bottom:0:-50; \
                 yabai -m window --resize top:0:-50
hyper - right : yabai -m window --resize left:50:0; \
                 yabai -m window --resize right:50:0

# Resize windows
hyper - h : yabai -m window --resize left:-50:0; \
                 yabai -m window --resize right:50:0
hyper - j : yabai -m window --resize bottom:0:50; \
                 yabai -m window --resize top:0:-50
hyper - k : yabai -m window --resize bottom:0:-50; \
                 yabai -m window --resize top:0:50
hyper - l : yabai -m window --resize left:50:0; \
                 yabai -m window --resize right:-50:0

# Position windows
hyper - q   : yabai -m window --grid 20:20:1:1:8:8
hyper - w   : yabai -m window --grid 20:20:1:1:18:8
hyper - e   : yabai -m window --grid 20:20:11:1:8:8
hyper - a   : yabai -m window --grid 20:20:1:1:8:18
hyper - s   : yabai -m window --grid 5:5:1:1:3:3
hyper - d   : yabai -m window --grid 20:20:11:1:8:18
hyper - z   : yabai -m window --grid 20:20:1:11:8:8
hyper - x   : yabai -m window --grid 20:20:1:11:18:8
hyper - c   : yabai -m window --grid 20:20:11:11:8:8

# zoom and native zoom
hyper - f : yabai -m window --grid 1:1:0:0:1:1
hyper - g 		  : yabai -m window --toggle native-fullscreen

# toggle border
hyper - y : yabai -m window --toggle border

# Move focus container to workspace
hyper - 0x21 : yabai -m window --space prev; yabai -m space --focus prev
hyper - 0x1E : yabai -m window --space next; yabai -m space --focus next
hyper - 1 : yabai -m window --space 1; yabai -m space --focus 1
hyper - 2 : yabai -m window --space 2; yabai -m space --focus 2
hyper - 3 : yabai -m window --space 3; yabai -m space --focus 3
hyper - 4 : yabai -m window --space 4; yabai -m space --focus 4
hyper - 4 : yabai -m window --space 5; yabai -m space --focus 5
hyper - 4 : yabai -m window --space 6; yabai -m space --focus 6

# Quick restart
hyper - t : launchctl kickstart -k "gui/${UID}/homebrew.mxcl.yabai"


